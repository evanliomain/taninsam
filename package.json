{
  "name": "taninsam",
  "version": "0.0.0-development",
  "description": "",
  "keywords": [],
  "main": "dist/taninsam.umd.js",
  "module": "dist/taninsam.es5.js",
  "typings": "dist/types/taninsam.d.ts",
  "files": [
    "dist"
  ],
  "author": "Evan Liomain <evan.liomain@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/evanliomain/taninsam"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && cpx \"./src/@types/**/*.d.ts\" \"./dist/types/@types\" && rollup -c rollup.config.ts && rimraf compiled && typedoc --out dist/docs --exclude \"**/*+(index|.spec).ts\" --target es6  --theme node_modules/ui-router-typedoc-themes/bin/default src",
    "start": "tsc -w & rollup -c rollup.config.ts -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "gen": "plop function"
  },
  "lint-staged": {
    "{src,tools}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "devDependencies": {
    "@types/jest": "^24",
    "@types/node": "^12.0.0",
    "colors": "^1.3",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^1.0.0",
    "jest": "^24",
    "lint-staged": "^8.2.1",
    "plop": "^2.0.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "replace-in-file": "^4.0.0",
    "rimraf": "^2.6.1",
    "rollup": "^1.15.2",
    "rollup-plugin-commonjs": "^9.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^15.9.9",
    "ts-jest": "^24.0.0",
    "ts-node": "^8",
    "tslint": "^5.4.3",
    "tslint-config-prettier": "^1.1.0",
    "tslint-config-standard": "^8.0.0",
    "typedoc": "^0.14",
    "typescript": "^3",
    "ui-router-typedoc-themes": "^1.0.2",
    "validate-commit-msg": "^2.12.2"
  }
}
